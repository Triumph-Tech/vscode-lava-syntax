{
	"name": "language-lava",
	"displayName": "Lava",
	"description": "Rock RMS Lava language support for Visual Studio Code.",
	"license": "MIT",
	"version": "1.0.10",
	"publisher": "GarrettJohnson",
	"author": {
		"name": "Garrett Johnson"
	},
	"engines": {
		"vscode": "^1.16.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"icon": "images/rockrms-icon.jpg",
	"galleryBanner": {
		"color": "#2f383a",
		"theme": "dark"
	},
	"keywords": [
		"rockrms",
		"lava",
		"rock",
		"grammar",
		"church"
	],
	"homepage": "https://lavadocs.garrett.io",
	"repository": "https://github.com/garrettjohnson/vscode-lava-syntax.git",
	"bugs": "https://github.com/garrettjohnson/vscode-lava-syntax",
	"qna": "https://github.com/garrettjohnson/vscode-lava-syntax",
	"main": "./out/main.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"pack": "vsce package",
		"publish": "vsce publish",
		"test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath="
	},
	"activationEvents": [
		"onCommand:rock-lava.openconnectionstrings",
		"onLanguage:lava"
	],
	"contributes": {
		"commands": [
			{
				"command": "rock-lava.openconnectionstrings",
				"title": "Open Connection Strings",
				"category": "Rock"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Lava Language Configuration",
			"properties": {
				"lava.snippets": {
					"type": "boolean",
					"default": true,
					"description": "Activates Lava snippets."
				},
				"lava.hover": {
					"type": "boolean",
					"default": true,
					"description": "Enable Lava on hover."
				}
			}
		},
		"configurationDefaults": {
			"[lava]": {
				"editor.insertSpaces": true,
				"editor.tabSize": 4,
				"editor.autoIndent": "full",
				"editor.snippetSuggestions": "bottom",
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true
			},
			"[xaml]": {
				"editor.wordBasedSuggestions": false,
				"files.insertFinalNewline": true,
				"files.trimTrailingWhitespace": true
			}
		},
		"languages": [
			{
				"id": "lava",
				"aliases": [
					"Lava",
					"lava"
				],
				"extensions": [
					".lava"
				],
				"configuration": "./syntaxes/lava.language-configuration.json"
			},
			{
				"id": "lavadoc",
				"aliases": [
					"Lava Documentation"
				],
				"extensions": [],
				"configuration": "./syntaxes/lava.language-configuration.json"
			},
			{
				"id": "xaml",
				"aliases": [
					"Rock XAML",
					"XAML"
				],
				"extensions": [
					".xaml"
				],
				"configuration": "./syntaxes/xaml.language-configuration.json"
			},
			{
				"id": "cshtml",
				"aliases": [
					"HTML (C#)",
					"HTML with embedded C#",
					"ASP.NET",
					"aspx",
					"cshtml",
					"Master Page"
				],
				"extensions": [
					".aspx",
					".ascx",
					".asax",
					".cshtml",
					".master"
				],
				"configuration": "./syntaxes/cshtml.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "lava",
				"scopeName": "text.html.lava",
				"path": "./syntaxes/lava.tmLanguage.json",
				"embeddedLanguages": {
					"meta.embedded.inline.css": "css",
					"meta.embedded.inline.javascript": "javascript",
					"meta.embedded.inline.json": "json",
					"meta.embedded.inline.less": "less",
					"meta.embedded.inline.sql": "sql",
					"meta.embedded.inline.csharp": "csharp"
				}
			},
			{
				"language": "lavadoc",
				"scopeName": "text.html.lavadoc",
				"path": "./syntaxes/lavadoc.tmLanguage.json"
			},
			{
				"language": "xaml",
				"scopeName": "text.xml.xaml",
				"path": "./syntaxes/xaml.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "lava",
				"path": "./snippets/lava-other.json"
			},
			{
				"language": "lava",
				"path": "./snippets/extensions/lava-shortcodes.json"
			},
			{
				"language": "lava",
				"path": "./snippets/extensions/lava-cms.json"
			},
			{
				"language": "cshtml",
				"path": "./snippets/rock-controls.json"
			},
			{
				"language": "xaml",
				"path": "./snippets/rock-xaml.json"
			}
		]
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/node": "^16.7.6",
		"@types/vscode": "^1.59.0",
		"typescript": "^4.4.3",
		"@vscode/test-web": "^0.0.12",
		"ts-loader": "^9.2.5",
		"webpack": "^5.58.0",
		"webpack-cli": "^4.8.0",
		"@types/webpack-env": "^1.16.2",
		"assert": "^2.0.0",
		"process": "^0.11.10"
	}
}
